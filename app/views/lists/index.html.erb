<div class="container">
 <h1 class="text-center">Lists</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.lists.each do |list| %>
      <tr>
        <td><%= link_to list.title, list %></td>
        <td><%= link_to '', edit_list_path(list), class: "fa fa-pencil-square-o fa-2x" %></td>
        <td><%= link_to '', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash fa-2x" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: "btn btn-primary btn-lg btn-block" %>

</div>
